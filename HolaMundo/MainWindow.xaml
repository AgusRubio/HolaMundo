<Window x:Class="HolaMundo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HolaMundo"
        mc:Ignorable="d"
        Title="Hola Mundo!" Height="450" Width="800"
        Icon="assets/hello.ico">
    <Grid>
        <TextBlock x:Name="Saludo" HorizontalAlignment="Left" Margin="244,75,0,0" TextWrapping="Wrap" Text="Hola mundo!" VerticalAlignment="Top" Width="297" Foreground="#FFE00D0D" FontSize="48" FontWeight="Bold"/>
        <TextBox x:Name="CuadroDeTexto" HorizontalAlignment="Left" Height="23" Margin="244,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <Button Content="Saludar" HorizontalAlignment="Left" Margin="456,197,0,0" VerticalAlignment="Top" Width="108" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="244,175,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top"/>

    </Grid>
</Window>
